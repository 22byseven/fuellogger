<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="style_log_entry_input" parent="android:Widget.Holo.Light.TextView">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/red_log_entry_text</item>
        <item name="android:textSize">25sp</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="style_log_entry_label" parent="android:Widget.Holo.Light.TextView">
        <item name="android:layout_margin">2dp</item>
        <item name="android:textColor">@color/green_log_label</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="style_edittext_hint" parent="android:Widget.Holo.Light.TextView">
        <item name="android:layout_margin">2dp</item>
        <item name="android:textColor">@color/red_log_entry_text</item>
        <item name="android:textSize">14sp</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="style_dashboard_label" parent="android:Widget.Holo.Light.TextView">
        <item name="android:layout_margin">4dp</item>
        <item name="android:textColor">@color/orange_dashboard_label</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle"></item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="style_dashboard_value" parent="android:Widget.Holo.Light.TextView">
        <item name="android:layout_margin">4dp</item>
        <item name="android:textColor">@color/blue_dashboard_value</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">sans</item>
    </style>

</resources>